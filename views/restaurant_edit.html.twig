<html>
    <head>
        <title>Update Restaurant</title>
    </head>
    <body>
        <h1>Update the {{ restaurant.getName }} name </h1>
            <form action="/restaurants/{{ restaurant.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">

                <label for="restaurant_name">Rename your restaurant name</label>
                <input id="restaurant_name" name="restaurant_name" type="text">

                <button type="submit">Update</button>
            </form>
    </body>
</html>
